<!DOCTYPE html>
<html>
<head>
  <title>Grocery</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

<nav class="navbar navbar-default navbar-fixed-top" role="navigation">
      <div class="container">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <a class="navbar-brand" href="">Grocery</a>
        </div>
        <div id="navbar" class="navbar-collapse collapse">
          <ul class="nav navbar-nav">
            <!--<li><%#= link_to "Homepage",homepage_path()%></li>-->
            <li><%= link_to "About"%></li>
            <!--<li><%#= link_to "Contact",contact_path()%></li>-->
          </ul>
          <% if !current_user.nil? %>
          <% if current_user.email == "a@b.com"%>
          <ul class="nav navbar-nav navbar-right">
          <li><%= link_to "Add Product",products_index_path()%></li>
          <li><%= link_to "All Products",products_show_path()%></li>
          <li class="user">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false"><i class="fa fa-user"></i>&nbsp;<%=current_user.email%><span class="caret"></span></a>
              <ul class="dropdown-menu" role="menu">
                <li><a href="#">Messages</a></li>
                <li><a href="#">Invite Friends</a></li>
                <li><a href="#">Docs</a></li>
                <li class="divider"></li>
                <li class="dropdown-header">Api</li>
                <li><a href="#">Settings</a></li>
                <li><%= link_to "Logout",destroy_user_session_path(),:method=>:delete%></li>
              </ul>
            </li>
            </ul>
          <%else%>
          <ul class="nav navbar-nav navbar-right">
            <li><%= link_to "Cart",carts_index_path()%></li>
            <li><%= link_to "All Products",products_show_path()%></li>
            <li><%= link_to "All Orders",orders_index_path()%></li>
            <li class="user">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false"><i class="fa fa-user"></i>&nbsp;<%=current_user.email%><span class="caret"></span></a>
              <ul class="dropdown-menu" role="menu">
                <li><a href="#">Messages</a></li>
                <li><a href="#">Invite Friends</a></li>
                <li><a href="#">Docs</a></li>
                <li class="divider"></li>
                <li class="dropdown-header">Api</li>
                <li><a href="#">Settings</a></li>
                <li><%= link_to "Logout",destroy_user_session_path(),:method=>:delete%></li>
              </ul>
            </li>
          </ul>
          <%end%>
          <%else%>
          <ul class="nav navbar-nav navbar-right">
             
             <li><%= link_to "All Products",products_show_path()%></li>
            <li><%= link_to "Sign in",new_user_session_path()%></li>
            <li><%= link_to "Sign up",new_user_registration_path()%></li>
          </ul>
          <%end%>
        </div><!--/.nav-collapse -->
      </div>
    </nav>
  <br/>
  <br/>
  <br/>

<% if notice %>
  <p class="alert alert-success"><%= notice %></p>
<% end %>
<% if alert %>
  <p class="alert alert-danger"><%= alert %></p>
<% end %>

<%= yield %>

<script>
       // This script is making selected li from nav tab active .
       $(document).ready(function() {
       var pageTitle = window.location.pathname;
       // The above window.location.pathname will give url of current page
       pageTitle=pageTitle.toLowerCase();
       //The above two line is to filtering the pagetitle for the correct match
       $('ul.nav.navbar-nav a').each(function () {
            var str = $(this).attr('href').toLowerCase();
            if(pageTitle.match(str))
            {
              $(this).parent().addClass("active"); 
            }
         });
       });
</script>

</body>

<%#= yield %>

</body>
</html>
